<% if admin_signed_in? %>
 

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_restaurant_path(restaurant), :class => 'btn btn-default btn-xs' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                restaurant_path(restaurant),
